<Window x:Class="Magazin.WindowDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magazin"
        mc:Ignorable="d"
        Title="WindowDetail" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name ="dataGrid" IsReadOnly="True" d:ItemsSource="{d:SampleData ItemCount=7}" Margin="210,10,-210,-11" AutoGenerateColumns="false" Grid.RowSpan="5">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Title" Binding ="{Binding Title}"/>
                <DataGridTextColumn Header="ListDeal" Binding ="{Binding ListDeal}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name ="refrechButton" Content="Refrech" HorizontalAlignment="Left" Margin="65,190,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
